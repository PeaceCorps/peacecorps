        /* This function runs when the body is loaded.*/
        var init = function () {
        	$.ui.backButtonText = "Back";// We override the back button text to always say "Back"
			//localStorage.clear();
			console.log("init launch");
			setTimeout(function(){navigator.splashscreen.hide()},1000);
			//$("#navbar_donate").click(function(){$.ui.loadContent("donate",false,false,"fade");});
			//navigator.splashscreen.hide();
        };
        document.addEventListener("DOMContentLoaded", init, false);
		$.ui.ready(function () {
			console.log("ui launch");
			//navigator.splashscreen.hide();
			//Add swipe listeners
            //This function will get executed when $.ui.launch has completed
        });
    </script>
    
    <script type="text/javascript" charset="utf-8">

    // Call onDeviceReady when PhoneGap is loaded.
    //
    // At this point, the document has loaded but phonegap-1.0.0.js has not.
    // When PhoneGap is loaded and talking with the native device,
    // it will call the event `deviceready`.
    // 
    document.addEventListener("deviceready", onDeviceReady, false);

    // PhoneGap is loaded and it is now safe to make calls PhoneGap methods
    function onDeviceReady() {
		<!--alert("Device ready, button intitated");-->
		//devplatorm = device.platform;
		//devversion = device.version;
		document.addEventListener("backbutton", function(e){
			if ($("#jobcontainer").is(':visible')) //back button binding for the career page
			{
			$("#jobcontainer").hide();
			$("#resultcontainer").show();
			}
			else if ($("#eventjobcontainer").is(':visible')) //back button binding for the career page
			{
			$("#eventjobcontainer").hide();
			$("#eventresultcontainer").show();
			}
		else if ($("#simplemodal-container").html()!=undefined){ // if the modal is showing
			modal.close();
		}
		else if ($("#header").find('#backButton').length==1)
		{$.ui.goBack();}  
	  	e.preventDefault();
	  	}, false);/*
		alert(devplatform);
		alert(devversion);*/		
    }

</script>
